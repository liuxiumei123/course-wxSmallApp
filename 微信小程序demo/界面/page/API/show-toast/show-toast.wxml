<import src="../common/header.wxml" />
<import src="../common/footer.wxml" />
<view class="container">
  <template is="header" data="{{title: 'showToast'}}" />
  <view class="page-body">
    <view class="page-body-wrapper">
      <view class="page-body-buttons">
        <button class="page-body-button" type="primary" bindtap="getToastLoading">获取加载消息提示框,5s后消失</button>
        <button class="page-body-button" type="warn" bindtap="getToastSuccess">获取成功消息提示框,2s后消失</button>
      </view>
    </view>
  </view>
  <template is="footer" />
</view>